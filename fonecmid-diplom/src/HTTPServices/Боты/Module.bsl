Функция GETPing(Запрос)
	
	Возврат ВКМ_Телеграм.ПростойУспешныйОтвет(Запрос);
	
КонецФункции


Функция POSTSend(Запрос)
	
	УстановитьПривилегированныйРежим(Истина);
	
	Попытка
		Ответ = ВКМ_Телеграм.ПростойУспешныйОтвет(Запрос);
	Исключение
		ИнформацияОбОшибке = ИнформацияОбОшибке();
		Ответ = ВКМ_Телеграм.ОтветОбОшибке(ИнформацияОбОшибке);
	КонецПопытки;
	
	ВКМ_Телеграм.ЗаписьЛога("send", Запрос, Ответ);
	
	Возврат Ответ;
	
КонецФункции
